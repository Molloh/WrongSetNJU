/* pages/contest/index.wxss */
.a{
  width: 46.875rpx;
  height: 20px;
  background: rebeccapurple;
  margin: 0 0 50rpx 50rpx;
}

page {
  background: #f7f7f7;
}

.header {
  font-size: 28rpx;
  height: 200rpx;
  width: 750rpx;
  font-weight: 300;
  color: rgba(255, 255, 255, 1);
  line-height: 36rpx;
  background: #3683d6;
  border-radius: 0 0 20rpx 20rpx;
  box-shadow: 0px 4px 20px 0px rgba(0, 49, 107, 0.3);
  box-sizing: border-box;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 200rpx;
  z-index: 1;
}

.header-desc {
  position: absolute;
  z-index: 2;
  font-size: 32rpx;
  margin: 60rpx 0 0 60rpx;
  line-height: 48rpx;
}

.header-name {
  font-size: 32rpx;
}

.button-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 22rpx;
}

.button {
  background: rgba(223, 237, 255, 1) !important;
  box-shadow: 6rpx 6rpx 16rpx 0px rgba(229, 233, 239, 0.5) !important;
  color: rgba(45, 97, 179, 1) !important;
}